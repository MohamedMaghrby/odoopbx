<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.website_talk_button</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="5"/>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="Website Talk Button" string="Website Talk Button" data-key="website_talk_button">
          <h2>Website Talk Button Configs</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_right_pane">
                <div class="content-group mt16">
                  <label for="talkbtn_sip_user" string="Sip User"/>
                  <field name="talkbtn_sip_user"/>
                </div>
                <div class="content-group mt16">
                  <label for="talkbtn_sip_secret" string="Sip Secret"/>
                  <field name="talkbtn_sip_secret" password="True"/>
                </div>
                <div class="content-group mt16">
                  <label for="talkbtn_exten" string="Exten"/>
                  <field name="talkbtn_exten"/>
                </div>
                <div class="content-group mt16">
                  <label for="talkbtn_sip_protocol" string="Sip Protocol"/>
                  <field name="talkbtn_sip_protocol"/>
                </div>
              </div>
            </div>
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_right_pane">
                <div class="content-group mt16">
                  <label for="talkbtn_sip_proxy" string="Sip Proxy"/>
                  <field name="talkbtn_sip_proxy"/>
                </div>
                <div class="content-group mt16">
                  <label for="talkbtn_stun_server" string="Stun Server"/>
                  <field name="talkbtn_stun_server"/>
                </div>
                <div class="content-group mt16">
                  <label for="talkbtn_websocket" string="Websoket"/>
                  <field name="talkbtn_websocket"/>
                </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
