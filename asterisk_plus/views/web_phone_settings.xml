<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="web_phone_settings_action" model="ir.actions.server">
    <field name="name">Web Phone Settings</field>
    <field name="state">code</field>
    <field name="model_id" ref="model_asterisk_plus_web_phone_settings"/>
    <field name="code">action = model.open_settings_form()</field>
  </record>

  <menuitem id="web_phone_settings_menu"
            parent="asterisk_plus.asterisk_settings_menu"
            action="web_phone_settings_action"
            name="Web Phone"
            sequence="400"/>

  <record id="web_phone_settings_form" model="ir.ui.view">
    <field name="name">Web Phone Settings</field>
    <field name="model">asterisk_plus.web_phone_settings</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form create="false" delete="false">
        <sheet>
          <group>
            <group>
              <field name="web_phone_sip_proxy"/>
              <field name="web_phone_sip_protocol"/>
            </group>
            <group>
              <field name="web_phone_websocket"/>
              <field name="web_phone_stun_server"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

</odoo>
